

@{
    ViewData["Title"] = "Giải phương trình bậc hai";
}
<form asp-action="GiaiPhuongTrinh" method="post">
    <div class="form-group">
        <label for="a">Hệ số A:</label>
        <input type="number" step="any" class="form-control" id="a" name="A" required />
    </div>
    <div class="form-group">
        <label for="b">Hệ số B:</label>
        <input type="number" step="any" class="form-control" id="b" name="B" required />
    </div>
    <div class="form-group">
        <label for="c">Hệ số C:</label>
        <input type="number" step="any" class="form-control" id="c" name="C" required />
    </div>
    <button type="submit" class="btn btn-primary">Giải phương trình</button>
</form>
    <h3>Kết quả:</h3>
<p>@ViewData["result"]</p>


